<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:id="@+id/card_tv_movie_background"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_tv_movie_detail_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:elevation="5dp"
                tools:ignore="UnusedAttribute"
                tools:background="@drawable/ic_google_kejar_2019"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/card_tv_movie_background"
            app:layout_constraintStart_toStartOf="@+id/card_tv_movie_background"
            app:layout_constraintTop_toBottomOf="@+id/card_tv_movie_background">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCardPersonal"
                >

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_tv_movie_detail"
                    android:layout_width="243dp"
                    android:layout_height="39dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginRight="71dp"
                    android:layout_marginEnd="71dp"
                    android:layout_marginBottom="47dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxEms="9"
                    android:textStyle="bold"

                    tools:text="Movie Name mov kejar google go 2019"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_tv_movie_detail_genre"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="206dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="206dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_alignBottom="@+id/text_tv_movie_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@+id/text_tv_movie_detail"
                    android:layout_alignLeft="@+id/text_tv_movie_detail"
                    android:layout_alignStart="@+id/text_tv_movie_detail"
                    android:elevation="10dp"
                    android:textSize="12sp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/white"
                    android:tooltipText="Genre Movie"
                    android:padding="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="RtlCompat,UnusedAttribute"
                    tools:text="Genre Action fantasy "/>


            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/text_tv_movie_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_tv_movie_detail"
                    android:layout_toRightOf="@+id/text_tv_movie_detail"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="-120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-1dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginTop="-42dp"
                    android:layout_marginBottom="-40dp"
                    android:layout_alignBottom="@+id/text_tv_movie_detail"
                    android:background="@drawable/ic_find_in_page_black_24dp"

                    tools:ignore="RtlCompat"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_tv_movie_detail_poster"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="5dp"
            android:alpha="0.4"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="4dp"
            app:layout_constraintEnd_toEndOf="@+id/cardStatus"
            app:layout_constraintStart_toStartOf="@+id/cardStatus"
            app:layout_constraintTop_toTopOf="@+id/cardStatus"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintBottom_toBottomOf="@+id/cardStatus"
            app:layout_constraintVertical_bias="0.49"
            tools:ignore="RtlCompat,UnusedAttribute"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardStatus"
            app:layout_constraintStart_toStartOf="@+id/cardStatus"
            app:layout_constraintEnd_toEndOf="@+id/cardStatus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.00999999">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_play_circle_filled_color_primary_48dp"
                android:backgroundTint="@color/colorCardPersonal"
                android:layout_marginBottom="16dp"
                tools:targetApi="lollipop"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_movies_tv_show_detail_play_now"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/black70"
                android:textAllCaps="false"
                android:gravity="center|bottom"
                android:layout_gravity="center|bottom"
                />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>