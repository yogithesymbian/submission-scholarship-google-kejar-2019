<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
            android:id="@+id/fav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fav">


    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_get_pro"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_poster_robinhood_background"
            android:elevation="8dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"

            app:layout_constraintEnd_toEndOf="@+id/tv"
            app:layout_constraintStart_toStartOf="@+id/fav"
            app:layout_constraintBottom_toBottomOf="@+id/fav"
            app:layout_constraintTop_toTopOf="@+id/tv"
            tools:targetApi="lollipop"/>


</androidx.constraintlayout.widget.ConstraintLayout>