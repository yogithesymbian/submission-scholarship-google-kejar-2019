<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
            android:id="@+id/fav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorCardPersonal"
            app:layout_constraintEnd_toStartOf="@+id/tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/image_get_pro">


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorCardPersonal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/image_get_pro"
            app:layout_constraintStart_toEndOf="@+id/fav">


    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_get_pro"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_yomoviepersonal_main"
            android:elevation="8dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_favorite"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="12dp"
            android:text="@string/activity_main_movie"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:rotation="70"
            app:layout_constraintBottom_toBottomOf="@+id/fav"
            app:layout_constraintTop_toTopOf="@+id/fav"
            app:layout_constraintEnd_toEndOf="@+id/fav"
            app:layout_constraintStart_toStartOf="@+id/fav"
            app:layout_constraintVertical_bias="0.52"
            tools:targetApi="lollipop"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_favorite_1"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="12dp"
            android:text="@string/activity_main_movie"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:rotation="70"
            app:layout_constraintBottom_toBottomOf="@+id/fav"
            app:layout_constraintEnd_toEndOf="@+id/fav"
            app:layout_constraintStart_toStartOf="@+id/fav"
            app:layout_constraintVertical_bias="0.49"
            app:layout_constraintTop_toTopOf="@+id/fav"
            tools:targetApi="lollipop"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_tv"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:elevation="12dp"
            android:text="@string/activity_main_tv_show"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:rotation="70"
            app:layout_constraintBottom_toBottomOf="@+id/tv"
            app:layout_constraintTop_toTopOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="@+id/tv"
            app:layout_constraintStart_toStartOf="@+id/tv"
            app:layout_constraintVertical_bias="0.19999999"
            tools:targetApi="lollipop"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_tv_1"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:elevation="12dp"
            android:text="@string/activity_main_tv_show"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:rotation="70"
            app:layout_constraintBottom_toBottomOf="@+id/tv"
            app:layout_constraintTop_toTopOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="@+id/tv"
            app:layout_constraintStart_toStartOf="@+id/tv"
            app:layout_constraintVertical_bias="0.19999999"
            tools:targetApi="lollipop"
            android:textSize="50sp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_tap_here_1"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/item_movies_tap_details"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/fav"
            app:layout_constraintStart_toStartOf="@+id/fav"
            app:layout_constraintEnd_toEndOf="@+id/text_favorite_1"
            tools:targetApi="lollipop"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_tap_here_2"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv"
            app:layout_constraintStart_toStartOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="@+id/tv"
            android:text="@string/item_movies_tap_details"
            android:textColor="@color/white"
            android:elevation="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            tools:targetApi="lollipop"
            app:layout_constraintHorizontal_bias="0.75"/>

</androidx.constraintlayout.widget.ConstraintLayout>