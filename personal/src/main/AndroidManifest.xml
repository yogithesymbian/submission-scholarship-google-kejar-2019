    <uses-permission android:name="android.permission.INTERNET"/>  <!-- an image in favorite using url link -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <!-- provider -->
    <uses-permission
            android:name="com.scodeid.scholarshipexpertscodeidev2019.homeFavorite.READ_DATABASE"/>
