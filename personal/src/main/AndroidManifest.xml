        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteTvDetailActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteTvActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteMovieDetailActivity">
