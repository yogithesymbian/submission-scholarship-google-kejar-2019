<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:context=".submission.MovieCatalogueMainActivity"
        >


    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_for_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:focusable="true"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarManual"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="8dp"
                android:background="@android:color/white"
                android:elevation="12dp"
                android:fitsSystemWindows="true"
                android:outlineAmbientShadowColor="@color/black80"
                android:outlineSpotShadowColor="@color/black70"
                android:tint="@color/colorAccent"
                android:visibility="visible"
                app:collapseIcon="@drawable/ic_arrow_back_black_24dp"
                app:logo="@drawable/ic_airplay_blue_24dp"
                app:subtitleTextColor="@color/black70"
                app:titleTextColor="@color/black70"
                app:title="yoMovie"
                app:titleMarginStart="24dp"
                app:popupTheme="@style/AppTheme"
                app:theme="@style/ToolbarColoredBackArrow"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                tools:ignore="UnusedAttribute"/>
        <!--tab Layout-->


        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/Widget.MaterialComponents.TabLayout.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="true"
                android:scrollbarStyle="outsideOverlay"
                android:visibility="visible"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabPaddingStart="10dp"
                tools:ignore="UnusedAttribute">

            <com.google.android.material.tabs.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_movie_catalogue_main_content_home"
                    />

            <com.google.android.material.tabs.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_movie_catalogue_main_content_popular"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_movie_catalogue_main_content_trailer"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/activity_movie_catalogue_main_content_saved"
                    android:clickable="true"
                    android:focusable="true"/>

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="?android:attr/windowBackground"
            android:visibility="visible"
            app:menu="@menu/navigation_bottom_movie"
            app:hideOnScroll="true"
            app:labelVisibilityMode="selected"
            app:layout_insetEdge="bottom"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_option_drawer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:elevation="12dp"
            android:visibility="visible"
            app:hideOnScroll="true"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:layout_anchor="@id/toolbarManual"
            app:layout_anchorGravity="right|center_horizontal"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            tools:ignore="RtlHardcoded,UnusedAttribute"
            tools:src="@drawable/ic_google_kejar_2019"
            />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_fav_tv"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_menu_live_tv_black_24dp"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@color/white"
            tools:ignore="RtlHardcoded,UnusedAttribute"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_fav_movie"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_menu_home_black_24dp"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@color/white"
            app:layout_anchor="@id/fab_fav_tv"
            app:layout_anchorGravity="top|right"
            tools:ignore="RtlHardcoded,UnusedAttribute"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:targetApi="lollipop">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">


            <!--content-->
            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="50dp">

                <include
                        layout="@layout/activity_movie_catalogue_main_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />
            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>