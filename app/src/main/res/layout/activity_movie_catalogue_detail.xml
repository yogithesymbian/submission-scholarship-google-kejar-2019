            app:layout_constraintStart_toStartOf="@+id/card_movie_over_to_detail"
            app:layout_constraintEnd_toEndOf="@+id/card_movie_over_to_detail"
            tools:ignore="UnusedAttribute"/>


    <androidx.cardview.widget.CardView
            android:id="@+id/card_movie_over_to_detail"
