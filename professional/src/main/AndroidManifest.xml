<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.scodeid.scholarshipexpertscodeidev2019">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!--<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/> &lt;!&ndash; start alarm when device restart &ndash;&gt;-->

    <!-- provider -->
    <permission
            android:name="com.scodeid.scholarshipexpertscodeidev2019.homeFavorite.READ_DATABASE"
            android:protectionLevel="normal"/>
    <permission
            android:name="com.scodeid.scholarshipexpertscodeidev2019.homeFavorite.WRITE_DATABASE"
            android:protectionLevel="normal"/>

    <application
            android:allowBackup="true"
            android:fullBackupContent="@xml/backup_descriptor"
            android:icon="@mipmap/ic_launcher_movie"
            android:label="@string/app_name_submission_1"
            android:roundIcon="@mipmap/ic_launcher_movie_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <service
                android:name=".service.StackService"
                android:enabled="true"
                android:exported="true"
                android:permission="android.permission.BIND_REMOTEVIEWS"
                >
        </service>

        <receiver
                android:name=".widget.StackImageMovies"

                >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/image_movies_widget_info"/>
        </receiver>

        <!--alarm manager-->
        <receiver
                android:name=".broadcast.NotificationReceiver"
                android:enabled="true"
                android:exported="true"
                tools:ignore="ExportedReceiver">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.BOOT_COMPLETED"/>-->
            <!--</intent-filter>-->
        </receiver>
        <!--end of alarm manager-->
        <!-- firebase cloud message -->
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_icon"
                android:resource="@mipmap/ic_launcher_movie"/>
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_color"
                android:resource="@color/colorAccent"/> <!-- CHANNEL ID -->
        <meta-data
                android:name="com.google.firebase.messaging.notification_channel_id_1"
                android:value="@string/notification_channel_id_1"/>
        <meta-data
                android:name="com.google.firebase.messaging.notification_channel_id_2"
                android:value="@string/notification_channel_id_2"/> <!-- END OF CHANNEL ID -->
        <service
                android:name=".service.FmDailyReminderService"
                android:enabled="true"
                tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity
                android:name=".setting.SettingsReminderActivity"
                android:label="@string/title_activity_settings_reminder"
                android:theme="@style/AppThemeSetting">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".homeInitView.MovieCatalogueMainActivity" />
        </activity>
        <!-- provider -->
        <provider
                android:authorities="com.scodeid.scholarshipexpertscodeidev2019.homeFavorite"
                android:name=".provider.FavoriteContentProvider"
                android:exported="true"
                android:readPermission="com.scodeid.scholarshipexpertscodeidev2019.homeFavorite.READ_DATABASE"
                android:writePermission="com.scodeid.scholarshipexpertscodeidev2019.homeFavorite.WRITE_DATABASE"
                />
        <!-- provider -->
        <activity android:name=".homeFavorite.MainFavoriteMovieRoomDeleteActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteMovieRoomActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteTvDetailActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteTvActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteMovieDetailActivity">
        </activity>
        <activity android:name=".homeFavorite.MainFavoriteMovieActivity">
        </activity>
        <activity android:name=".notification.NoInternetConnActivity">
        </activity>
        <activity
                android:name=".homeInitView.MovieCatalogueMainActivity"
                android:label="@string/app_name_submission_1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".notification.ComingSoonActivity">
        </activity>
        <activity
                android:name=".homeInitView.MovieCatalogueDetailActivity"
                android:label="@string/title_activity_movie_catalogue_detail"
                android:theme="@style/FullscreenTheme">
        </activity>
    </application>

</manifest>