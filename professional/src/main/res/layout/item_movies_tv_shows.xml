<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_tv_movie"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"

            android:scaleType="centerCrop"
            android:elevation="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:ignore="UnusedAttribute"
            tools:src="@drawable/ic_google_kejar_2019"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_tv_movie_name"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/image_tv_movie"
            app:layout_constraintStart_toEndOf="@+id/image_tv_movie"
            app:layout_constraintEnd_toStartOf="@+id/checkbox_fav_tv"
            tools:text="Yogi Kejar 2019 one two three four f"/>

    <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/text_tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:drawableRight="@drawable/ic_star_black_24dp"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:drawablePadding="4dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/image_tv_movie"
            app:layout_constraintBottom_toBottomOf="@+id/image_tv_movie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_tv_movie_name"
            app:layout_constraintVertical_bias="0.90999997"
            tools:text="9"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/item_movies_tv_shows_free"
            android:textStyle="bold|italic"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@+id/text_tv_rate"
            app:layout_constraintBottom_toBottomOf="@+id/text_tv_rate"
            app:layout_constraintStart_toEndOf="@+id/text_tv_rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintVertical_bias="1.0"/>

    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_fav_tv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/main_checkbox_selector_favorite"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/appCompatTextView2"
            app:layout_constraintStart_toStartOf="@+id/appCompatTextView2"
            app:layout_constraintTop_toTopOf="@+id/text_tv_movie_name"
            app:layout_constraintBottom_toBottomOf="@+id/text_tv_movie_name"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/image_tv_movie"
            app:layout_constraintBottom_toBottomOf="@+id/image_tv_movie"
            app:layout_constraintTop_toTopOf="@+id/image_tv_movie"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray90"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray90"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>