<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_poster"
            android:layout_width="114dp"
            android:layout_height="174dp"

            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/gray90"

            app:layout_constraintBottom_toBottomOf="@+id/card_movie_over_to"
            app:layout_constraintTop_toTopOf="@+id/card_movie_over_to_detail"
            app:layout_constraintStart_toStartOf="@+id/card_movie_over_to_detail"
            app:layout_constraintEnd_toEndOf="@+id/card_movie_over_to_detail"

            tools:ignore="UnusedAttribute"/>


    <androidx.cardview.widget.CardView
            android:id="@+id/card_movie_over_to_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:elevation="4dp"

            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnusedAttribute">
        <!--image-->
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_backdrop"
                android:layout_width="match_parent"
                android:layout_height="175dp"

                android:scaleType="fitXY"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_movie_over_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:elevation="4dp"

            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/card_movie_over_to_detail"
            app:layout_constraintEnd_toEndOf="@+id/card_movie_over_to_detail"
            app:layout_constraintStart_toStartOf="@+id/card_movie_over_to_detail"
            tools:ignore="UnusedAttribute">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_backdrop_footer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:background="@color/colorMovieDark"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_tv_movie_name"
                    style="@style/TextAppearance.MaterialComponents.Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"

                    android:gravity="center|center_vertical|center_horizontal"

                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@string/activity_movie_catalogue_detail_movie_name"
                    tools:ignore="UnusedAttribute"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_play_trailer"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"

                    android:text="@string/activity_movie_catalogue_detail_play"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"

                    app:icon="@drawable/ic_play_arrow_black_24dp"
                    app:iconGravity="start"
                    app:iconTint="@color/white"

                    app:layout_constraintEnd_toEndOf="@+id/image_backdrop_footer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_tv_movie_name"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_score_label_percent"
                    style="@style/TextAppearance.MaterialComponents.Headline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"

                    android:textColor="@color/colorMovieGreenLight"
                    android:textSize="10sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="@+id/button_play_trailer"
                    app:layout_constraintTop_toTopOf="@+id/image_backdrop_footer"
                    app:layout_constraintStart_toStartOf="@+id/button_play_trailer"
                    app:layout_constraintVertical_bias="0.26"
                    app:layout_constraintEnd_toEndOf="@+id/button_play_trailer"
                    app:layout_constraintHorizontal_bias="0.13"
                    tools:ignore="SmallSp"
                    tools:text="@string/activity_movie_catalogue_detail_99"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>